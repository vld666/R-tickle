                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-4">
            <div class="col mt-4 d-flex justify-content-center">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center px-0 py-2">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <script>
        const modal = document.getElementById('modal')
        const modalTransactions = document.getElementById('modal-transactions')
        const btnCredits = document.getElementById('btn-credits')
        const btnTransactions = document.getElementById('btn-transactions')
        const btnClose = document.getElementById('closeModal')
        const btnTransactionsClose = document.getElementById('closeTransactionsModal')
        const btnBack = document.getElementById('back')
        const btnTransactionsBack = document.getElementById('backTransactions')



        btnCredits.addEventListener('click',()=>{
            modal.classList.toggle("modalOn")
            body.classList.toggle("body-modal-on")
        })

        btnTransactions.addEventListener('click',()=>{
            modalTransactions.classList.toggle("modalOn")
            body.classList.toggle("body-modal-on")
        })

        btnClose.addEventListener('click',()=>{
            modal.classList.remove("modalOn")
            body.classList.remove("body-modal-on")
        })

        btnTransactionsClose.addEventListener('click',()=>{
            modalTransactions.classList.remove("modalOn")
            body.classList.remove("body-modal-on")
        })

        btnBack.addEventListener('click',()=>{
            modal.classList.remove("modalOn")
            body.classList.remove("body-modal-on")
        })

        btnTransactionsBack.addEventListener('click',()=>{
            modalTransactions.classList.remove("modalOn")
            body.classList.remove("body-modal-on")
        })
    </script>


