{% extends './base.html.twig' %}

{% block modals %}
    <div class="modalWrap d-flex justify-content-center">
        <div class="modal-base position-absolute text-center position-relative" id="modal">

            <div class="row m-3">
                <div class="col">
                    <span class="h2 text-warning text-middle my-auto modal-title">Buy credits</span>
                    <span class="position-absolute xSpan">
                        <i class="fa-solid fa-xmark text-danger" id="closeModal" style="cursor: pointer; font-size: 2rem;"></i>
                    </span>
                </div>
            </div>

            <hr class="m-0 mb-4 text-light">

            <div class="row mt-4">
                <div class="col d-flex justify-content-center">
                    <a href="{{ path('app_user_creditsAdd', {amount: 50}) }}" class="btn btn-lg btn-success w-75 buy-credits-btn">Buy 50 credits</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col d-flex justify-content-center">
                    <a href="{{ path('app_user_creditsAdd', {amount: 100}) }}" class="btn btn-lg btn-success w-75 buy-credits-btn">Buy 100 credits</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col d-flex justify-content-center">
                    <a href="{{ path('app_user_creditsAdd', {amount: 150}) }}" class="btn btn-lg btn-success w-75 buy-credits-btn">Buy 150 credits</a>
                </div>
            </div>
            <div class="row mt-3 mb-4">
                <div class="col d-flex justify-content-center">
                    <a href="{{ path('app_user_creditsAdd', {amount: -100}) }}" class="btn btn-lg btn-danger w-75 buy-credits-btn">Sell 100 credits</a>
                </div>
            </div>



            <div class="row">
                <div class="col d-flex justify-content-center">
                    <div class="btn btn-warning position-absolute" id="back" style="bottom: 12px">back</div>
                </div>
            </div>

        </div>
    </div>

    <div class="modalWrap d-flex justify-content-center">
        <div class="modal-base modal-transactions position-absolute text-center position-relative" id="modal-transactions">

            <div class="row m-3">
                <div class="col">
                    <span class="h2 text-warning text-middle my-auto modal-title">Transactions</span>
                    <span class="position-absolute xSpan">
                        <i class="fa-solid fa-xmark text-danger" id="closeTransactionsModal" style="cursor: pointer; font-size: 2rem;"></i>
                    </span>
                </div>
            </div>

            <div class="container table-container">
                <table class="table table-bordered table-dark table-hover">
                    <thead>
                    <tr class="position-sticky">
                        <th class="text-center">ID</th>
                        <th class="text-center">Amount</th>
                        <th class="text-center">Type</th>
                        <th class="text-center">Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ut in userTransactions %}
                        <tr>
                            <td class="text-center">{{ ut.id }}</td>
                            <td class="text-center">{{ ut.amount }}</td>
                            <td class="text-center">{{ ut.type }}</td>
                            <td class="text-center">{{ ut.CreatedAt|date("d.m.y h:m:s") }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col d-flex justify-content-center">
                    <div class="btn btn-warning position-absolute" id="backTransactions" style="bottom: 12px">back</div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


