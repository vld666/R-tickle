{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
        <div class="container d-flex justify-content-center w-50 pt-3 pb-4 py-5 mt-2 form-container">
            {{ form_start(registrationForm) }}

            <div class="row">
                <h1 class="text-center text-light">Register</h1>
            </div>

            <hr class="text-light mb-4">

            <div class="row">
                {{ form_row(registrationForm.username, {'attr' : {'class': 'form-input text-center'}}) }}
            </div>
            <div class="row">
                {{ form_row(registrationForm.plainPassword, {'attr' : {'class': 'form-input text-center'}}) }}
            </div>
            <div class="row">
                {{ form_row(registrationForm.mail, {'attr' : {'class': 'form-input text-center'}}) }}
            </div>
            <div class="row">
                {{ form_row(registrationForm.phone, {'attr' : {'class': 'form-input text-center'}}) }}
            </div>
            <div class="row">
                {{ form_row(registrationForm.firstName, {'attr' : {'class': 'form-input text-center'}}) }}
            </div>
            <div class="row">
                {{ form_row(registrationForm.lastName, {'attr' : {'class': 'form-input text-center'}}) }}
            </div>
            <div class="row">
                {{ form_row(registrationForm.profilePicture, {'attr': {'class': 'text-light'}}) }}
            </div>
            <div class="row">
                {{ form_row(registrationForm.submit, {'attr' : {'class': 'form-submit btn btn-info'}}) }}
            </div>

            <div class="row mt-4">
                <div class="col d-flex justify-content-center">
                    <a href="{{ path('app_register') }}" class="btn btn-success">Login</a>

                </div>

            </div>

            {{ form_end(registrationForm,{'render_rest': false}) }}


        </div>

    </div>

    <style>
        .form-input{
            width: 100%;
            height: 40px;
            margin-bottom: 10px;
            border-radius: 8px;
            border: 2px solid #000000;
            box-shadow: #262626 0 1px  3px 1px;
        }

        .form-container{
            width: 500px !important;
            /*box-shadow: #414141 0 2px 8px 1px;*/
            background: rgb(17,18,20);
            background: linear-gradient(180deg, rgb(28, 29, 35) 0%, rgba(52,58,64,1) 100%);
            border-radius: 12px;
        }

        .form-submit{
            width: 100%;
            height: 50px;
            margin-top: 20px;
            box-shadow: #262626 0 1px  10px 1px;
            border-radius: 8px;
        }
    </style>
{% endblock %}
