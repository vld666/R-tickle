{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container w-25 d-flex justify-content-center form-container">
        <div class="row">
            <h1 class="text-center text-light">Sign in</h1>
            <hr class="text-light my-2 mb-4">

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                <input type="text" value="{{ last_username }}" placeholder="Username" name="username" id="inputUsername" class="form-control my-3" autocomplete="username" required autofocus>
                <input type="password" placeholder="Password" name="password" id="inputPassword" class="form-control my-3" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-success mb-4" type="submit">
                    Sign in
                </button>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <a href="{{ path('app_register') }}" class="btn btn-sm btn-info">Register</a>

                        </div>

                    </div>
                </form>

        </div>
    </div>

    <style>
        .form-container{
            width: 500px;
            /*box-shadow: #414141 0 2px 8px 1px;*/
            background: rgb(17,18,20);
            background: linear-gradient(180deg, rgb(28, 29, 35) 0%, rgba(52,58,64,1) 100%);
            border-radius: 12px;
            padding: 25px 30px 25px 30px;
            margin-top: 50px;

        }


        .form-container button{
            width: 100%;
            height: 50px;
            margin-top: 25px;
            box-shadow: #262626 0 1px  10px 1px;
            border-radius: 8px;
        }

        .form-container input{
            height: 50px;
        }

    </style>
{% endblock %}
