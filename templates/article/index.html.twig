{% extends './base.html.twig' %}

{% block body %}



    <div class="container w-75">
        <div class="row">
            <div class="col d-flex justify-content-center">Some title or whatever</div>
        </div>
        <hr>
        <div class="row d-flex justify-content-center">

            {% for article in articles %}

            <div class="card mx-auto my-3" style="width: 20rem;">
                {% if article.image %}
                <img src="{{ asset('uploads/photos/') }}{{ article.image }}" alt="img missing" class="card-img-top image">
                {% else %}
                <img src="{{ asset('uploads/photos/no-image.png') }}" alt="No image" class="card-img-top image" style="filter: invert(70%)">
                {% endif %}
                    <div class="card-body mx-auto pt-0 text-center">
                        <div class="row pt-2 pb-2">

                            {% if article.category %}
                            <div class="col-3">
                                <div class="category" style="background-color: {{ article.category.color }} ">
                                    {{ article.category.name }}
                                </div>
                            </div>
                            {% else %}
                                <div class="col-3">
                                    <div class="category cat-none">
                                        None
                                    </div>
                                </div>
                            {% endif %}
                            <div class="col-3">

                            </div>

                            <div class="col-6">
                                <div class="publisher text-muted">
                                    <p class="mx-0 my-0">
                                        Publisher: {{ article.publishedBy.lastName }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <h5 class="card-title my-2">
                            {{ article.title }}
                        </h5>
                        <p class="card-text text-center">
                            {{ article.text|length > 160 ? article.text|slice(0, 160) ~ '...' : article.text }}
                        </p>
                    <a href="{{ path('app_article_view', {id: article.id}) }}" class="btn read-more text-light">Read more</a>
                </div>

            </div>

            {% endfor %}

