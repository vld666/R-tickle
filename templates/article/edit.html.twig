{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center mt-5">
        <div class="row bg-info w-50 pb-4">
            <div class="col">
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <p class="my-3">Create new
                            <i class="fa-solid fa-feather-pointed" style="color: red; font-size: 1.2rem;"></i>
                            <span class="m-0"> <span style="color: red;">R</span>-tickle</span>
                        </p>
                    </div>
                </div>
                <hr class="mt-0">
                {{ form_start(articleForm) }}
                <div class="row">
                    <div class="col-9">
                        <div class="row">
                            <div class="col d-flex justify-content-center">
                                {{ form_label(articleForm.title) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center widget">
                                {{ form_widget(articleForm.title) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center">
                                {{ form_label(articleForm.text) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center widget">
                                {{ form_widget(articleForm.text) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="row">
                            <div class="col d-flex justify-content-center">
                                {{ form_label(articleForm.category) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center widget">
                                {{ form_widget(articleForm.category) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col d-flex justify-content-center">
                                {{ form_label(articleForm.image) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center widget">
                                {{ form_widget(articleForm.image) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center mt-2">
                                <img src="{{ asset('uploads/photos/') }}{{ article.image }}" alt="No image" class="card-img-top image w-50">
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col d-flex justify-content-center">
                                {{ form_row(articleForm.Submit) }}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(articleForm) }}
            </div>
        </div>
    </div>

    <style>
        #article_form_title{
            width: 400px;
            height: 35px;
        }

        #article_form_text{
            width: 400px;
            height: 150px;
        }

        #article_form_category, .container button, #article_form_image{
            width: 100px;
        }

        input[type="file"]{
            width: 51%;

        }
    </style>

{% endblock %}