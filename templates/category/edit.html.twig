{% extends './base.html.twig' %}

{% block body %}
    <div class="container w-75 pt-4">
        <div class="row mt-4">
            <div class="col d-flex justify-content-center">
                <div class="editCard">
                    <div class="row m-3">
                        <div class="col d-flex justify-content-center">
                            <span class="h2 text-info text-middle my-auto">Edit category</span>
                        </div>
                    </div>

                    <hr class="m-0 mb-2 text-light">

                    <div class="row form">
                        <div class="col">
                            {{ form_start(categoryForm) }}
                            <div class="row px-4 m-3 mt-4 text-middle">
                                {{ form_widget(categoryForm.name) }}
                            </div>

                            <div class="row px-4 m-3 text-center">
                                {{ form_widget(categoryForm.description) }}
                            </div>

                            <div class="row px-4 m-3 text-center">
                                {{ form_widget(categoryForm.color) }}
                            </div>

                            <div class="row px-4 m-3 my-4">
                                {{ form_widget(categoryForm.submit, {'attr' : {'class': 'btn btn-success'}}) }}
                            </div>
                            {{ form_end(categoryForm) }}
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col">
                            <div class="container px-4 d-flex justify-content-center">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success text-center px-0 py-2">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .editCard{
            width: 30vw;
            height: fit-content;
            background: rgb(17,18,20);
            background: linear-gradient(180deg, rgb(28, 29, 35) 0%, rgba(52,58,64,1) 100%);
            border: 4px solid #1a1a1a;
            top: 15vh;
            border-radius: 30px;
        }

        .form input{
            text-align: center;
            height: 40px;
            border-radius: 10px;
            border: none;
        }

        .form button{
            box-shadow: #262626 0 1px  10px 1px;
            height: 50px;
            border-radius: 10px;
        }

        .alert{
            width: 70%;
            color: #af0707;
            font-weight: bold;
        }
    </style>
{% endblock %}